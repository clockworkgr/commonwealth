{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@hicommonwealth/core": ["../../libs/core"],
      "@hicommonwealth/shared": ["../../libs/shared"],
      "@hicommonwealth/model": ["../../libs/model"],
      "@hicommonwealth/chains": ["../../libs/chains"],
      "@hicommonwealth/adapters": ["../../libs/adapters"],
      "*": ["./*", "shared/*", "client/scripts/*"]
    }
  },
  "include": [
    "./client",
    "./shared",
    "./test",
    "./globals.d.ts",
    "./server",
    "./server.ts",
    "./scripts"
  ],
  "references": [
    { "path": "../../libs/adapters" },
    { "path": "../../libs/chains" },
    { "path": "../../libs/core" },
    { "path": "../../libs/model" },
    { "path": "../../libs/shared" }
  ]
}
