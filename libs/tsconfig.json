{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "baseUrl": ".",
    "composite": true,

    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "preserveWatchOutput": true
  },
  "exclude": ["**/node_modules", "**/build", "**/test", "**/__mocks__"]
}
