{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node16",
    "module": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false,
    "baseUrl": ".",
    "paths": {
      "@hicommonwealth/*": ["libs/*/src"]
    }
  },
  "include": ["**/src"],
  "exclude": ["**/node_modules", "**/build"]
}
